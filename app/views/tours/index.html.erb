<p id="notice"><%= notice %></p>

<h1>Tours</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Booking deadline</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Start location</th>
      <th>Itinerary</th>
      <th>Contact agent</th>
      <th>Seats</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.id %></td>
        <td><%= tour.name %></td>
        <td><%= tour.description %></td>
        <td><%= tour.price %></td>
        <td><%= tour.booking_deadline %></td>
        <td><%= tour.start_date %></td>
        <td><%= tour.end_date %></td>
        <td><%= tour.start_location %></td>
        <td><%= tour.itinerary %></td>
        <td><%= tour.agent_id %></td>
        <td><%= tour.seats %></td>
        <td><%= tour.status %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to_if(tour.agent_id == current_user.id,'Edit', edit_tour_path(tour))%></td>
        <td><%= link_to_if(tour.agent_id == current_user.id,'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

